<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" prefHeight="500.0" prefWidth="990.0"
            xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="io.github.pedroermarinho.hospital.Controller.User.UsersController">
    <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <center>
            <BorderPane prefHeight="500.0" prefWidth="581.0" BorderPane.alignment="CENTER">
                <center>
                    <TableView fx:id="PessoaTable" prefHeight="297.0" prefWidth="534.0"
                               BorderPane.alignment="CENTER">
                        <columns>
                            <TableColumn fx:id="IDColumn" prefWidth="75.0" text="ID">
                                <cellValueFactory>
                                    <PropertyValueFactory property="pontos"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="UsuarioColumn" prefWidth="192.0" text="Usuario">
                                <cellValueFactory>
                                    <PropertyValueFactory property="usuario"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="NomeColumn" maxWidth="1.7976931348623157E308" minWidth="0.0"
                                         prefWidth="500.0" text="Nome">
                                <cellValueFactory>
                                    <PropertyValueFactory property="nome"/>
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                        <contextMenu>
                            <ContextMenu>
                                <items>
                                    <MenuItem fx:id="btnDetalhes" mnemonicParsing="false" onAction="#OnDetalhes"
                                              text="Detalhes"/>
                                </items>
                            </ContextMenu>
                        </contextMenu>
                    </TableView>
                </center>
                <bottom>
                    <HBox alignment="CENTER" prefHeight="35.0" prefWidth="534.0" spacing="20.0"
                          BorderPane.alignment="CENTER">
                        <BorderPane.margin>
                            <Insets top="5.0"/>
                        </BorderPane.margin>
                        <Button fx:id="btNovo" maxHeight="35.0" minHeight="30.0" mnemonicParsing="false"
                                onAction="#NovaPessoa" prefHeight="35.0" prefWidth="150.0"
                                styleClass="button-black" text="Novo"/>
                        <Button fx:id="btEditar" maxHeight="35.0" minHeight="30.0" mnemonicParsing="false"
                                onAction="#EditarPessoa" prefHeight="35.0" prefWidth="150.0"
                                styleClass="button-black" text="Editar"/>
                        <Button fx:id="btDeletar" maxHeight="35.0" minHeight="30.0" mnemonicParsing="false"
                                onAction="#DeletarPessoa" prefHeight="35.0" prefWidth="150.0"
                                styleClass="button-black" text="Deletar"/>
                    </HBox>
                </bottom>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </BorderPane>
        </center>
        <right>
            <BorderPane prefHeight="500.0" prefWidth="394.0" BorderPane.alignment="CENTER">
                <bottom>
                    <HBox alignment="CENTER" prefHeight="35.0" prefWidth="200.0" spacing="15.0"
                          BorderPane.alignment="CENTER">
                        <BorderPane.margin>
                            <Insets top="15.0"/>
                        </BorderPane.margin>
                        <Button fx:id="btnCancelar" maxHeight="35.0" minHeight="30.0" mnemonicParsing="false"
                                onAction="#OnCancelar" prefHeight="35.0" prefWidth="150.0"
                                styleClass="button-red" text="Cancelar"/>
                        <Button fx:id="btnSalvar" maxHeight="35.0" minHeight="30.0" mnemonicParsing="false"
                                onAction="#OnSalvar" prefHeight="35.0" prefWidth="150.0"
                                styleClass="button-verde" text="Salvar"/>
                    </HBox>
                </bottom>
                <BorderPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </BorderPane.margin>
                <center>
                    <VBox alignment="CENTER" focusTraversable="true" maxHeight="1.7976931348623157E308"
                          maxWidth="1.7976931348623157E308" prefHeight="413.0" prefWidth="394.0" spacing="10.0"
                          BorderPane.alignment="CENTER">
                        <ToolBar maxWidth="330.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0"
                                 prefWidth="228.0">
                            <TextField fx:id="PrimeiroNomeField" nodeOrientation="LEFT_TO_RIGHT"
                                       prefHeight="32.0" prefWidth="210.0" styleClass="text-field"/>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nome"/>
                        </ToolBar>
                        <ToolBar maxWidth="330.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0"
                                 prefWidth="228.0">
                            <TextField fx:id="SobrenomeField" nodeOrientation="LEFT_TO_RIGHT"
                                       prefHeight="32.0" prefWidth="210.0" styleClass="text-field"/>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sobrenome"/>
                        </ToolBar>
                        <ToolBar maxWidth="330.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0"
                                 prefWidth="228.0">
                            <TextField fx:id="usuarioField" nodeOrientation="LEFT_TO_RIGHT"
                                       prefHeight="32.0" prefWidth="210.0" styleClass="text-field"/>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Usuario"/>
                        </ToolBar>
                        <ToolBar maxWidth="330.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0"
                                 prefWidth="228.0">
                            <TextField fx:id="EmailField" nodeOrientation="LEFT_TO_RIGHT" prefHeight="32.0"
                                       prefWidth="210.0" styleClass="text-field"/>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email"/>
                        </ToolBar>
                        <ToolBar maxWidth="330.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0"
                                 prefWidth="228.0">
                            <PasswordField fx:id="senhaField" nodeOrientation="LEFT_TO_RIGHT"
                                           prefHeight="32.0" prefWidth="210.0" styleClass="text-field"/>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Senha"/>
                        </ToolBar>
                        <ToolBar maxWidth="330.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0"
                                 prefWidth="228.0">
                            <DatePicker fx:id="dpData" nodeOrientation="LEFT_TO_RIGHT" prefHeight="32.0"
                                        prefWidth="210.0"/>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Data"/>
                        </ToolBar>
                        <ToolBar maxWidth="330.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0"
                                 prefWidth="228.0">
                            <ComboBox fx:id="SexoBox" nodeOrientation="LEFT_TO_RIGHT" prefHeight="32.0"
                                      prefWidth="210.0"/>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sexo"/>
                        </ToolBar>
                    </VBox>
                </center>
            </BorderPane>
        </right>
        <top>
            <BorderPane prefHeight="80.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <bottom>
                    <Separator maxHeight="1.0" maxWidth="1.7976931348623157E308" minHeight="1.0" prefHeight="1.0"
                               prefWidth="200.0" BorderPane.alignment="CENTER"/>
                </bottom>
                <center>
                    <Label alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                           styleClass="label-black-titulo" text="Usuario" BorderPane.alignment="CENTER"/>
                </center>
            </BorderPane>
        </top>
    </BorderPane>
</AnchorPane>
